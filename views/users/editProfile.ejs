<!-- bootstrap snippet -->
<%- layout('layouts/boilerplate') %>
<link rel="stylesheet" href="/static/stylesheets/edit.css" />
<link rel="stylesheet" href="/static/stylesheets/edit.css" />
<script src="https://api.mapbox.com/mapbox-gl-js/v2.9.1/mapbox-gl.js"></script>
<script src="https://api.mapbox.com/mapbox-gl-js/plugins/mapbox-gl-geocoder/v5.0.0/mapbox-gl-geocoder.min.js"></script>
<link rel="stylesheet" href="https://api.mapbox.com/mapbox-gl-js/plugins/mapbox-gl-geocoder/v5.0.0/mapbox-gl-geocoder.css" type="text/css">
    <link
      href="https://api.mapbox.com/mapbox-gl-js/v2.9.1/mapbox-gl.css"
      rel="stylesheet"
    />
<% let currentProfile = "" %> 
    <div class="container  my-5">
      <nav class="nav nav-borders">
        <a class="navLink <%= nav === "general" ? "active" : "" %>  ms-0" href="/edit">ΓΕΝΙΚΟ ΠΡΟΦΙΛ</a>
        <% for(let profile of user.profiles){ %> 
            <% if(nav.origin.title ===  profile.origin.title) currentProfile = profile %> 
        <a class="navLink <%= nav.origin.title ===  profile.origin.title ? "active" : "" %>" href="/edit/<%= profile.origin._id %>"><%= profile.origin.title %> </a>
        <%}%>
      </nav>
  <h1 class="h1 h1Title">Επεξεργασια Προφιλ</h1>
      
  <div id='map' class="mb-5" style='width: 100%; height:450px;'></div>

  <div class="row">
    <div class="col-4">
      <div class="footerBg container">
        <div class="containerTitle">Εικόνα Προφίλ</div>
        <div class="center card-body">
          <img
            id="profileImg"
            class="imgProfile circle mb-3"
            src="<%= nav.image.url %> "
          />
          <div class="small font-italic text-muted mb-4">
            Μέγιστο μέγεθος 2MB
          </div>
          <form action="/editProfileImage/<%= currentProfile.origin._id %>" method="POST" enctype="multipart/form-data">
            <input
              accept="image/*"
              type="file"
              name="image"
              id="imgInput"
              class="fileInput"
            />
            <label class="fileInputLabel" for="imgInput"
              ><span>Αλλαγή εικόνας</span></label
            >
            <p>
              <button class="mt-3 btn btn-success" type="submit">
                Αποθήκευση
              </button>
            </p>
          </form>
        </div>
      </div>
      <div class="footerBg container card mt-3" style="text-align: center">
        <div class="socialTitle">Social Media</div>
        <form action="/editSocials" method="post">
          <ul class="list-group list-group-flush">
            <li class="footerBg list-group-item">
              <h6 class="white mb-1">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  viewbox="0 0 24 22"
                  class="svgIcon feather feather-facebook mr-2 icon-inline text-primary"
                >
                  <path
                    d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"
                  ></path></svg
                >Facebook
              </h6>
              <div class="center">
                <input
                  class="inputSocial"
                  id="facebook"
                  name="facebook"
                  type="text"
                  value="<%= user.facebook %>"
                />
              </div>
            </li>
            <li class="footerBg list-group-item">
              <h6 class="white my-1">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 26 24"
                  class="svgIcon feather feather-twitter mr-2 icon-inline text-info"
                >
                  <path
                    d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"
                  ></path></svg
                >Twitter
              </h6>
              <div class="center">
                <input
                  class="inputSocial"
                  id="twitter"
                  name="twitter"
                  type="text"
                  value="<%= user.twitter %>"
                />
              </div>
            </li>
            <li class="footerBg list-group-item">
              <h6 class="white mt-1">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 26 24"
                  class="svgIcon feather feather-instagram mr-2 icon-inline text-danger"
                >
                  <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
                  <path
                    d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"
                  ></path>
                  <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line></svg
                >Instagram
              </h6>
              <div class="center">
                <input
                  class="inputSocial"
                  id="instagram"
                  name="instagram"
                  type="text"
                  value="<%= user.instagram%>"
                />
              </div>
            </li>
          </ul>
          <button class="my-3 btn btn-success" type="submit">Αποθήκευση</button>
        </form>
      </div>
    </div>
    <div class="col-8">
      <div class="footerBg container mb-4">
        <div class="containerTitle">Στοιχεία Προφίλ</div>
        <div class="card-body">
          <form
            action="/editUser"
            method="POST"
            id="editForm"
            class="needs-validation mb-3"
            novalidate
          >
            <div class="row gx-3 mb-3">
              <div class="col-6">
                <label class="small mb-1 form-label" for="name">Όνομα</label>
                <input
                  class="form-control"
                  id="name"
                  name="name"
                  type="text"
                  value="<%= user.name %>"
                  placeholder="Όνομα..."
                  required
                />
                <div class="invalid-feedback">
                  <b>Το όνομα δεν μπορεί να είναι κενό</b>
                </div>
              </div>
              <div class="col-6">
                <label class="small mb-1 form-label" for="surname"
                  >Επώνυμο</label
                >
                <input
                  class="form-control"
                  id="surname"
                  name="surname"
                  type="text"
                  placeholder="Επώνυμο..."
                  value="<%= user.surname%>"
                  required
                />
                <div class="invalid-feedback">
                  <b>Το επώνυμο δεν μπορεί να είναι κενό</b>
                </div>
              </div>
            </div>
            <div class="row gx-3 mb-3">
              <div class="col-6">
                <label class="small mb-1 form-label" for="email">Email</label>
                <input
                  class="form-control"
                  id="email"
                  name="email"
                  type="email"
                  placeholder="Email..."
                  value="<%= user.username %>"
                  required
                />
                <div id="invalidEmail" class="invalid-feedback">
                  <b>Παρακαλώ συμπληρώστε ένα έγκυρο email</b>
                </div>
              </div>
              <div class="col-6">
                <label class="small mb-1 form-label" for="uni">Ίδρυμα</label>
                <input
                  class="form-control"
                  id="uni"
                  name="uni"
                  type="text"
                  value="<%= user.uni %>"
                  placeholder="Ίδρυμα..."
                />
                <div class="invalid-feedback">
                  <b>Το Ίδρυμα δεν μπορεί να είναι κενό</b>
                </div>
              </div>
            </div>
            <div class="mb-3">
              <label class="small mb-1 form-label" for="address"
                >Διεύθυνση</label
              >
              <input
                class="form-control"
                id="address"
                name="address"
                type="text"
                value="<%= user.address%>"
                placeholder="Διαλέξτε ένα σημείο στο χάρτη"
              />
              <div class="invalid-feedback">
                <b>Η διεύθυνση δεν μπορεί να είναι κενή</b>
              </div>
            </div>

            <button id="editBtn" class="mt-3 btn btn-success" type="submit">
              Αποθήκευση
            </button>
          </form>
        </div>
      </div>
      <div class="footerBg container card">
        <div class="mb-4 mt-2">
          <div class="containerTitle">Βιογραφικό Σημείωμα</div>
          <form action="/editProfileBio/<%= currentProfile.origin._id %>" method="post">
            <textarea
              id="bio"
              name="bio"
              class="fitTextarea form-control"
              rows="8"
            >
<%= nav.bio%></textarea
            >
            <button id="editBtn" class="mt-3 btn btn-success" type="submit">
              Αποθήκευση
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
  <% if(nav.skills.length >0){ %> 
  <div class="row mt-3">
    <div class="col-sm-12">
      <div class="card footerBg container">
        <div class="card-body" >
          <form action="/editProfileSkills/<%= currentProfile.origin._id %>" method="post" >
          <div class="containerTitle">Skills</div>
          <div id="inputContainer">
          <% for(let i=0;i<nav.skills.length;i++){%>
          <p class="white"> 
            <input class="mt-5 inputSkills" type="text" value="<%= nav.skills[i].skillName%>" name="skills[<%=i %>]">  
            <span id="demo<%=i %>" class="sliderRange"><%= nav.skills[i].rating %></span></p>
          <div class="slidecontainer">
            <input name="skills[<%=i %>]" type="range" min="1" max="100" value="<%= nav.skills[i].rating %>" class="slider" id="myRange<%=i %>">
          </div>
          <% } %> 
        </div>
        <div id="btnContainer">
          <button id="addBtn" class="mt-4 me-3 btn btn-warning" onclick="addSkill()" type="button">
            Προσθήκη Νέου
          </button>
          <button id="editBtn" class="mt-4 btn btn-success" type="submit">
            Αποθήκευση
          </button>
        </div>
        </form>
        </div>
      </div>
    </div>
  </div>
  <% } %> 


<div class="container my-5">
  <h2 class="h1Title">Εργασιες</h2>
  <div class="container mb-5">
    <div class="row flex-lg-nowrap">
      <div class="col">
        <div class="row flex-lg-nowrap">
          <div class="col mb-3">
            <div class="card-body footerBg container">
              <div class="table-responsive table-lg mt-3">
                <table class="table table-bordered white">
                  <thead>
                    <tr>
                      <th class="center white">Τύπος Αρχείου</th>
                      <th class="center white">Όνομα</th>
                      <th class="center white">Ημερομηνία</th>
                      <th class="center white">Ορατό σε όλους</th>
                      <th class="center white">Ενέργεις</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% for(let i=0;i<nav.assignments.length;i++){%>
                    <tr>
                      <td class="center">
                        <div
                          class="bg-light d-inline-flex justify-content-center align-items-center align-top"
                          style="width: 40px; height: 40px; border-radius: 3px"
                        >
                          <% if(nav.assignments[i].filetype === "pdf"){%>
                          <i class="dark fileType fa-regular fa-file-pdf"></i>
                          <% }else if(nav.assignments[i].filetype ===
                          "ppt" || nav.assignments[i].filetype
                          ==="pptx"){ %>
                          <i
                            class="dark fileType fa-regular fa-file-powerpoint"
                          ></i>
                          <% }else if(nav.assignments[i].filetype ===
                          "doc" || nav.assignments[i].filetype ===
                          "docx"){ %>
                          <i class="dark fileType fa-regular fa-file-word"></i>
                          <% }else if(nav.assignments[i].filetype ===
                          "txt"){ %>
                          <i class="dark fileType fa-regular fa-file-lines"></i>
                          <% }else if(nav.assignments[i].filetype ===
                          "jpeg" || nav.assignments[i].filetype === "png"
                          || nav.assignments[i].filetype === "gif"){ %>
                          <i class="dark fileType fa-regular fa-file-image"></i>
                          <% }else{ %>
                          <i class="dark fileType fa-regular fa-file"></i>
                          <% } %>
                        </div>
                      </td>
                      <% nav.assignments[i].filename.substring(0,
                      nav.assignments[i].filename.indexOf('-')); %>
                      <td class="center white">
                        <div id="modalContainer">
                        <button type="button" id="modalBtn<%= i %>" class="button">
                          <%=
                          nav.assignments[i].filename.substring(nav.assignments[i].filename.indexOf('-')
                          + 1); %>
                        </button>

                        <div id="myModal<%= i %>" class="fileModal">
                          <div class="fileModalContent">
                            <span class="close">&times;</span>
                            <p>
                              <% if(nav.assignments[i].filetype === "pdf" || nav.assignments[i].filetype ===
                          "jpeg" || nav.assignments[i].filetype === "png"
                          || nav.assignments[i].filetype === "gif" || nav.assignments[i].filetype ===
                          "txt"){ %>
                              <embed
                                width="100%"
                                height="700px"
                                frameborder='0'
                                src="<%= nav.assignments[i].path %>"></embed>

                              <% }else{ %>
                                <embed
                                width="100%"
                                height="700px"
                                frameborder='0' 
                                src="https://view.officeapps.live.com/op/embed.aspx?src=<%= nav.assignments[i].path %>"></embed>
                              <% } %>
                            </p>
                          </div>
                          </div>
                        </div>
                      </td>

                      <td class="center">
                        <span class="white"
                          ><%=
                          nav.assignments[i].submitted.toLocaleDateString('el-GR',
                          { year: 'numeric', month: 'long', day:
                          'numeric' }) %>
                        </span>
                      </td>

                      <td class="center">
                        <div
                          class="centerSwitch centerSwitch form-check form-switch"
                        >
                          <input
                            id="switch<%= i %>"
                            class="form-check-input"
                            type="checkbox"
                            role="switch"
                            <%= nav.assignments[i].visible ? "checked" : ""%>
                          />
                        </div>
                      </td>
                      <td class="center">
                        <div class="btn-group">
                          <a
                            target="_blank"
                            class="btn btn-outline-secondary"
                            type="button"
                            href="<%= nav.assignments[i].path%>"
                            download="<%=nav.assignments[i].filename.substring(nav.assignments[i].filename.indexOf('-')
                          + 1)%>"
                          >
                          <i class="fa-solid fa-download"></i>
                          </a>
                        <form action="/deleteAssignment/<%= i %>/<%= currentProfile.origin._id %>" method="post">
                          <button
                            id="deleteBtn"
                            class="btn btn-outline-secondary"
                            type="submit"
                          >
                            <i class="fa-regular fa-trash-can"></i>
                          </button>
                        </form>
                        </div>
                      </td>
                    </tr>
                    <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container mb-5">
  <h2 class="h1Title">Ανεβασμα εργασιων</h2>
  <div class="center upload-container">
  <form
    id="assignmentForm"
    method="POST"
    enctype="multipart/form-data"
    action="/assignmentUpload/<%= currentProfile.origin._id %>"
  >
    <input type="file" name="file" id="file" />
    <br>
    <button id="assignmentButton" class="mt-4 btn btn-success submitBtn" type="submit" accept-charset="UTF-8">
      Ανέβασμα Αρχείου
    </button>
  </div>
  </form>
  </div>

</div>

<script>
  const mapboxToken = "<%- process.env.MAPBOX_TOKEN %>" 
  const geo = <%- JSON.stringify(user.geometry.coordinates) %>
  const currentProfile = <%- JSON.stringify(currentProfile) %>
</script>

