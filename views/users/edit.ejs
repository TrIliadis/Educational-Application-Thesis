<%- layout('layouts/boilerplate') %>
<link rel="stylesheet" href="static/stylesheets/edit.css" />
<h1 class="h1 text-center h1Title">Επεξεργασια Προφιλ</h1>

<div class="container my-5">
  <div class="row">
    <div class="col-4">
      <div class="footerBg container">
        <div class="containerTitle">Εικόνα Προφίλ</div>
        <div class="card-body text-center">
          <img
            id="profileImg"
            class="imgProfile circle mb-3"
            src="<%= loggedUser.image.url %> "
          />
          <div class="small font-italic text-muted mb-4">
            Μέγιστο μέγεθος 2MB
          </div>
          <form action="/editImage" method="POST" enctype="multipart/form-data">
            <input
              accept="image/*"
              type="file"
              name="image"
              id="imgInput"
              class="fileInput"
            />
            <label class="fileInputLabel" for="imgInput"
              ><span>Αλλαγή εικόνας</span></label
            >
            <p>
              <button class="mt-3 btn btn-success" type="submit">
                Αποθήκευση
              </button>
            </p>
          </form>
        </div>
      </div>
    </div>
    <div class="col-8">
      <div class="footerBg container mb-4">
        <div class="containerTitle">Στοιχεία Προφίλ</div>
        <div class="card-body">
          <form
            action="/editUser"
            method="POST"
            id="editForm"
            class="needs-validation"
            novalidate
          >
            <div class="row gx-3 mb-3">
              <div class="col-6">
                <label class="small mb-1 form-label" for="name">Όνομα</label>
                <input
                  class="form-control"
                  id="name"
                  name="name"
                  type="text"
                  value="<%= loggedUser.name %>"
                  placeholder="Όνομα..."
                  required
                />
                <div class="invalid-feedback">
                  <b>Το όνομα δεν μπορεί να είναι κενό</b>
                </div>
              </div>
              <div class="col-6">
                <label class="small mb-1 form-label" for="surname"
                  >Επώνυμο</label
                >
                <input
                  class="form-control"
                  id="surname"
                  name="surname"
                  type="text"
                  placeholder="Επώνυμο..."
                  value="<%= loggedUser.surname%>"
                  required
                />
                <div class="invalid-feedback">
                  <b>Το επώνυμο δεν μπορεί να είναι κενό</b>
                </div>
              </div>
            </div>
            <div class="row gx-3 mb-3">
              <div class="col-6">
                <label class="small mb-1 form-label" for="email">Email</label>
                <input
                  class="form-control"
                  id="email"
                  name="email"
                  type="email"
                  placeholder="Email..."
                  value="<%= loggedUser.username %>"
                  required
                />
                <div id="invalidEmail" class="invalid-feedback">
                  <b>Παρακαλώ συμπληρώστε ένα έγκυρο email</b>
                </div>
              </div>
              <div class="col-6">
                <label class="small mb-1 form-label" for="town">Πόλη</label>
                <input
                  class="form-control"
                  id="town"
                  name="town"
                  type="text"
                  value="<%= loggedUser.town %>"
                  placeholder="Πόλη..."
                />
                <div class="invalid-feedback">
                  <b>Η πόλη δεν μπορεί να είναι κενή</b>
                </div>
              </div>
            </div>
            <div class="mb-3">
              <label class="small mb-1 form-label" for="address"
                >Διεύθυνση</label
              >
              <input
                class="form-control"
                id="address"
                name="address"
                type="text"
                value="<%= loggedUser.address%>"
                placeholder="Διεύθυνση..."
              />
              <div class="invalid-feedback">
                <b>Η διεύθυνση δεν μπορεί να είναι κενή</b>
              </div>
            </div>

            <button id="editBtn" class="mt-3 btn btn-success" type="submit">
              Αποθήκευση
            </button>
          </form>
          <div class="right">
            <form action="/deleteUser" method="POST">
              <button class="mt-3 btn btn-danger" type="submit">
                Διαγραφή Λογαριασμού
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script src="static/javascripts/edit.js"></script>
