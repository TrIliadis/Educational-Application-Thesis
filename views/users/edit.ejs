<!-- bootstrap snippet -->
<%- layout('layouts/boilerplate') %>
<link rel="stylesheet" href="static/stylesheets/edit.css" />

<script src="https://api.mapbox.com/mapbox-gl-js/v2.9.1/mapbox-gl.js"></script>
<script src="https://api.mapbox.com/mapbox-gl-js/plugins/mapbox-gl-geocoder/v5.0.0/mapbox-gl-geocoder.min.js"></script>
<link rel="stylesheet" href="https://api.mapbox.com/mapbox-gl-js/plugins/mapbox-gl-geocoder/v5.0.0/mapbox-gl-geocoder.css" type="text/css">
    <link
      href="https://api.mapbox.com/mapbox-gl-js/v2.9.1/mapbox-gl.css"
      rel="stylesheet"
    />

<div class="container my-5">
  <nav class="nav nav-borders">
    <a class="navLink active ms-0" href="#">Προφίλ</a>
    <a class="navLink" href="/edit/assignments">Εργασίες</a>
  </nav>

  <h1 class="h1 h1Title">Επεξεργασια Προφιλ</h1>

  <div id='map' class="mb-5" style='width: 100%; height:500px;'></div>

  <div class="row">
    <div class="col-4">
      <div class="footerBg container">
        <div class="containerTitle">Εικόνα Προφίλ</div>
        <div class="center card-body">
          <img
            id="profileImg"
            class="imgProfile circle mb-3"
            src="<%= loggedUser.image.url %> "
          />
          <div class="small font-italic text-muted mb-4">
            Μέγιστο μέγεθος 2MB
          </div>
          <form action="/editImage" method="POST" enctype="multipart/form-data">
            <input
              accept="image/*"
              type="file"
              name="image"
              id="imgInput"
              class="fileInput"
            />
            <label class="fileInputLabel" for="imgInput"
              ><span>Αλλαγή εικόνας</span></label
            >
            <p>
              <button class="mt-3 btn btn-success" type="submit">
                Αποθήκευση
              </button>
            </p>
          </form>
        </div>
      </div>
      <div class="footerBg container card mt-3" style="text-align: center">
        <div class="socialTitle">Social Media</div>
        <form action="/editSocials" method="post">
          <ul class="list-group list-group-flush">
            <li class="footerBg list-group-item">
              <h6 class="white mb-1">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  viewbox="0 0 24 22"
                  class="svgIcon feather feather-facebook mr-2 icon-inline text-primary"
                >
                  <path
                    d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"
                  ></path></svg
                >Facebook
              </h6>
              <div class="center">
                <input
                  class="inputSocial"
                  id="facebook"
                  name="facebook"
                  type="text"
                  value="<%= loggedUser.facebook %>"
                />
              </div>
            </li>
            <li class="footerBg list-group-item">
              <h6 class="white my-1">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 26 24"
                  class="svgIcon feather feather-twitter mr-2 icon-inline text-info"
                >
                  <path
                    d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"
                  ></path></svg
                >Twitter
              </h6>
              <div class="center">
                <input
                  class="inputSocial"
                  id="twitter"
                  name="twitter"
                  type="text"
                  value="<%= loggedUser.twitter %>"
                />
              </div>
            </li>
            <li class="footerBg list-group-item">
              <h6 class="white mt-1">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 26 24"
                  class="svgIcon feather feather-instagram mr-2 icon-inline text-danger"
                >
                  <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
                  <path
                    d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"
                  ></path>
                  <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line></svg
                >Instagram
              </h6>
              <div class="center">
                <input
                  class="inputSocial"
                  id="instagram"
                  name="instagram"
                  type="text"
                  value="<%= loggedUser.instagram%>"
                />
              </div>
            </li>
          </ul>
          <button class="my-3 btn btn-success" type="submit">Αποθήκευση</button>
        </form>
      </div>
    </div>
    <div class="col-8">
      <div class="footerBg container mb-4">
        <div class="containerTitle">Στοιχεία Προφίλ</div>
        <div class="card-body">
          <form
            action="/editUser"
            method="POST"
            id="editForm"
            class="needs-validation mb-3"
            novalidate
          >
            <div class="row gx-3 mb-3">
              <div class="col-6">
                <label class="small mb-1 form-label" for="name">Όνομα</label>
                <input
                  class="form-control"
                  id="name"
                  name="name"
                  type="text"
                  value="<%= loggedUser.name %>"
                  placeholder="Όνομα..."
                  required
                />
                <div class="invalid-feedback">
                  <b>Το όνομα δεν μπορεί να είναι κενό</b>
                </div>
              </div>
              <div class="col-6">
                <label class="small mb-1 form-label" for="surname"
                  >Επώνυμο</label
                >
                <input
                  class="form-control"
                  id="surname"
                  name="surname"
                  type="text"
                  placeholder="Επώνυμο..."
                  value="<%= loggedUser.surname%>"
                  required
                />
                <div class="invalid-feedback">
                  <b>Το επώνυμο δεν μπορεί να είναι κενό</b>
                </div>
              </div>
            </div>
            <div class="row gx-3 mb-3">
              <div class="col-6">
                <label class="small mb-1 form-label" for="email">Email</label>
                <input
                  class="form-control"
                  id="email"
                  name="email"
                  type="email"
                  placeholder="Email..."
                  value="<%= loggedUser.username %>"
                  required
                />
                <div id="invalidEmail" class="invalid-feedback">
                  <b>Παρακαλώ συμπληρώστε ένα έγκυρο email</b>
                </div>
              </div>
              <div class="col-6">
                <label class="small mb-1 form-label" for="town">Καταγωγή</label>
                <input
                  class="form-control"
                  id="town"
                  name="town"
                  type="text"
                  value="<%= loggedUser.town %>"
                  placeholder="Πόλη..."
                />
                <div class="invalid-feedback">
                  <b>Η πόλη δεν μπορεί να είναι κενή</b>
                </div>
              </div>
            </div>
            <div class="mb-3">
              <label class="small mb-1 form-label" for="address"
                >Διεύθυνση</label
              >
              <input
                class="form-control"
                id="address"
                name="address"
                type="text"
                value="<%= loggedUser.address%>"
                placeholder="Διαλέξτε ένα σημείο στο χάρτη"
              />
              <div class="invalid-feedback">
                <b>Η διεύθυνση δεν μπορεί να είναι κενή</b>
              </div>
            </div>

            <button id="editBtn" class="mt-3 btn btn-success" type="submit">
              Αποθήκευση
            </button>
          </form>
        </div>
      </div>
      <div class="footerBg container card">
        <div class="mb-4 mt-2">
          <div class="containerTitle">Βιογραφικό Σημείωμα</div>
          <form action="/editBio" method="post">
            <textarea
              id="bio"
              name="bio"
              class="fitTextarea form-control"
              rows="8"
            >
<%= loggedUser.bio%></textarea
            >
            <button id="editBtn" class="mt-3 btn btn-success" type="submit">
              Αποθήκευση
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
  <% if(loggedUser.skills.length >0){ %> 
  <div class="row mt-3">
    <div class="col-sm-12">
      <div class="card footerBg container">
        <div class="card-body" >
          <form action="/editSkills" method="post" >
          <div class="containerTitle">Skills</div>
          <div id="inputContainer">
          <% for(let i=0;i<loggedUser.skills.length;i++){%>
          <p class="white"> 
            <input class="mt-5 inputSkills" type="text" value="<%= loggedUser.skills[i].skillName%>" name="skills[<%=i %>]">  
            <span id="demo<%=i %>" class="sliderRange"><%= loggedUser.skills[i].rating %></span></p>
          <div class="slidecontainer">
            <input name="skills[<%=i %>]" type="range" min="1" max="100" value="<%= loggedUser.skills[i].rating %>" class="slider" id="myRange<%=i %>">
          </div>
          <% } %> 
        </div>
        <div id="btnContainer">
          <button id="addBtn" class="mt-4 me-3 btn btn-warning" onclick="addSkill()" type="button">
            Προσθήκη Νέου
          </button>
          <button id="editBtn" class="mt-4 btn btn-success" type="submit">
            Αποθήκευση
          </button>
        </div>
        </form>
        </div>
      </div>
    </div>
  </div>
  <% } %> 
</div>

<script src="static/javascripts/edit.js"></script>

