<%- layout('layouts/boilerplate') %>
<link rel="stylesheet" href="/static/stylesheets/show.css" />
<link rel="stylesheet" href="/static/stylesheets/calendar.css" />

<h1 class="text-center h1Title"><%= course.title %></h1>
<% if(course.images.length>0){ %> 
<div
  id="courseCarousel"
  class="carousel slide carousel-fade my-5"
  data-bs-ride="carousel"
>
<div class="carousel-indicators">
    <button type="button" data-bs-target="#courseCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
    <% for(let i=1;i<course.images.length;i++){ %> 
    <button type="button" data-bs-target="#courseCarousel" data-bs-slide-to="<%= i %> " aria-label="Slide <%= i %> "></button>
    <% } %> 
  </div>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="<%= course.images[0].url %>" class="center " alt="..." />
    </div>
    <% for(let i=1;i<course.images.length;i++){ %>
    <div class="carousel-item">
      <img src="<%= course.images[i].url %>" class="center" alt="..." />
    </div>
    <% } %>
  </div>
</div>
<% } %> 
 
<div class="calendar-container mb-5">
  <div class="calendar">
    <div class="front">
      <div class="current-date">
        <% const date = new Date(Date.now()) %> 
        <h1 class="text-center"><%= date.toLocaleDateString('el-GR', {  weekday: 'long',year: 'numeric', month: 'long', day: 'numeric' }) %> </h1>
        <% const day = date.toLocaleDateString('el-GR',{day: 'numeric'}) %> 
      </div>

      <div class="current-month">
        <ul class="week-days">
          <li>ΔΕΥ</li>
          <li>ΤΡΙ</li>
          <li>ΤΕΤ</li>
          <li>ΠΕΜ</li>
          <li>ΠΑΡ</li>
          <li>ΣΑΒ</li>
          <li>ΚΥΡ</li>
        </ul>

        <div class="weeks">
          <div class="first">
            <span class="last-month">25</span>
            <span class="last-month">26</span>
            <span class="last-month">27</span>
            <span class="last-month">28</span>
            <span class="last-month">29</span>
            <span class="last-month">30</span>
            <span class=<%= day === "1" ? 'active' : ''%>>01</span>
          </div>

          <div class="second">
            <span class=<%= day === "2" ? 'active' : ''%>>02</span>
            <span class=<%= day === "3" ? 'active' : ''%>>03</span>
            <span class=<%= day === "4" ? 'active' : ''%>>04</span>
            <span class=<%= day === "5" ? 'active' : ''%>>05</span>
            <span class=<%= day === "6" ? 'active' : ''%>>06</span>
            <span class=<%= day === "7" ? 'active' : ''%>>07</span>
            <span class=<%= day === "8" ? 'active' : ''%>>08</span>
          </div>

          <div class="third">
            <span class=<%= day === "9" ? 'active' : ''%>>09</span>
            <span class=<%= day === "10" ? 'active' : ''%>>10</span>
            <span class=<%= day === "11" ? 'active' : ''%>>11</span>
            <span class=<%= day === "12" ? 'active' : ''%>>12</span>
            <span class=<%= day === "13" ? 'active' : ''%>>13</span>
            <span class=<%= day === "14" ? 'active' : ''%>>14</span>
            <span class=<%= day === "15" ? 'active' : ''%>>15</span>

          </div>

          <div class="fourth">
            <span class=<%= day === "16" ? 'active' : ''%>>16</span>
            <span class=<%= day === "17" ? 'active' : ''%>>17</span>
            <span class=<%= day === "18" ? 'active' : ''%>>18</span>
            <span class=<%= day === "19" ? 'active' : ''%>>19</span>
            <span class=<%= day === "20" ? 'active' : ''%>>20</span>
            <span class=<%= day === "21" ? 'active' : ''%>>21</span>
            <span class=<%= day === "22" ? 'active' : ''%>>22</span>

          </div>

          <div class="fifth">
            <span class=<%= day === "23" ? 'active' : ''%>>23</span>
            <span class=<%= day === "24" ? 'active' : ''%>>24</span>
            <span class=<%= day === "25" ? 'active' : ''%>>25</span>
            <span class=<%= day === "26" ? 'active' : ''%>>26</span>
            <span class=<%= day === "27" ? 'active' : ''%>>27</span>
            <span class=<%= day === "28" ? 'active' : ''%>>28</span>
            <span class=<%= day === "29" ? 'active' : ''%>>29</span>

          </div>

          <div class="sixth">
            <span class=<%= day === "30" ? 'active' : ''%>>30</span>
            <span class=<%= day === "31" ? 'active' : ''%>>31</span>
            <span class="next-month">01</span>
            <span class="next-month">02</span>
            <span class="next-month">03</span>
            <span class="next-month">04</span>
            <span class="next-month">05</span>
          </div>
        </div>
      </div>
    </div>

    <div class="back">
      <input placeholder="Υπενθύμιση">
      <div class="info">
        <div class="date">
          <p class="info-date">
          Ημερομηνία: <span><%= date.toLocaleDateString('el-GR', {  month: 'long', day: 'numeric' }) %> </span>
          </p>
          <p class="info-time">
            Ώρα: <span><%= date.toLocaleTimeString('el-GR', {  hour: 'numeric', minute: 'numeric' }) %></span>
          </p>
        </div>
        <div class="address">
          <p>
            Μέρος: <span>zoom link</span>
          </p>
        </div>
        <div class="observations">
          <p>
            Παρατηρήσεις: <span>Προσέλευση 15 λεπτά νωρίτερα</span>
          </p>
        </div>
      </div>

      <div class="actions">
        <button class="save">
          Αποθήκευση <i class="ion-checkmark"></i>
        </button>
        <button class="dismiss">
          Ακύρωση <i class="ion-android-close"></i>
        </button>
      </div>
    </div>

  </div>
</div>
<script src="/static/javascripts/calendar.js"></script>
