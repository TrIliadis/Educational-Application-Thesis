<%- layout('layouts/boilerplate') %>
<link rel="stylesheet" href="/static/stylesheets/coursesIndex.css" />
<h1 class="h1 text-center h1Title">ολα τα μαθηματα</h1>

<% for(let i=0;i<courses.length;i+=4){%>
  <div class="container">
    <% if(i===courses.length) break %>
    <article class="card bgDark blue">
      <a class="card-img-link" href="/courses/<%= courses[i]._id %>">
        <img
          class="card-img"
          src="<%=courses[i].images[0].url %>"
          alt="Image Title"
        />
      </a>
      <div class="card-text">
        <h1 class="card-title blue">
